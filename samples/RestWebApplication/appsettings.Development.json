{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "MemoryLoggerSettings": {
    "AcceptedCategoryNames": [ "Console*", "CommonInfo", "Hosted*", "FatalError", "BusinessError" ]
  },

  "NLogLoggerSettings": {
    "AcceptedCategoryNames": [
      "ConsoleInfo",
      "CommonInfo",
      "ConsoleError", /**/
      "FatalError",
      "BusinessError"
    ],
    "AcceptedAliasesCategoryNames:*Hosted*": "ConsoleError"
  }
}
